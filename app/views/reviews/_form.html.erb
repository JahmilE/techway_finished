
 <%= form_for @review do |f| %>
   
   
 
   <div class="field">
     <%= f.label :name %><br />
     <%= f.text_field :name %>
   </div>
   <div class="field">
     <%= f.label :email %><br />
     <%= f.text_field :email %>
   </div>
 
   <div class="field">
     <%= f.label :review %><br />
     <%= f.text_area :review %>
   </div>
   <% if current_admin %>
   <div class="actions">
     <h2>Active Review?</h2><br />
     <%= f.radio_button(:active, 'true') %>
   </div>
   <div class="actions">
     <h2>Inactive Review?</h2><br />
     <%= f.radio_button(:active, 'false') %>
   </div>
   <% end %>

   <div class="actions">
     <%= f.submit %>
   </div>
 <% end %>

