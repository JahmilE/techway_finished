<div class = "col-md-12">
  <div class = "header-style">
    <h1 class = "title">SERVICES</h1>
  </div>
  <div class = "bump">
    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>
      <p class="navbar-text pull-right">
    <% if admin_signed_in? %>
      Logged in as <strong><%= current_admin.email %></strong>.
      <%= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'  %>
      <% else %>
      <%= link_to "Sign up", admin_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_admin_session_path, :class => 'navbar-link'  %>
    <% end %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <div class = "sidebar-style">
      <h1>DASHBOARD OPTIONS</h1>
        <ul class="nav">
          <li class="active"><a href="/admin">Home</a></li>
          <li class="active"><a href="/static_pages/new"> Add New Client</a></li>  
          <li class="active"><a href="/reviews">Manage Reviews</a></li>  
        </ul>
    </div>
  </div>

  <div class = "col-md-9">
    <h1>SERVICES</h1>
    <div class = "scrollbar">
      <table>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

      <% @services.each do |service| %>
        <tr>
          <td><%= service.name %></td>
          <td><%= service.description %></td>
          <td><button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_service_path(service) %></button></td>
          <td><button type="button" class="btn btn-default"><%= link_to 'Destroy', service_path(service), method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
      </table>

      <button type="button" class="btn btn-default"><%= link_to 'New Service', new_service_path %></button>
      <button type="button" class="btn btn-default"><%= link_to 'Home', admin_path %></button>
    </div>
  </div>
</div>


